[alias]
  c = commit -m
  a = add --all
  s = status
  d = difftool
  m = mergetool
[color]
  branch     = auto
  diff       = auto
  status     = auto
  showbranch = auto
  ui         = true
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[github]
  user = evelios
[user]
  name = Waters, Thomas (ENG)
  email = thomas.waters2@globalfoundries.com
[merge]
  tool = diffconflicts
  conflictstyle = diff3
[mergetool]
  prompt     = false
  keepBackup = false
[diff]
  tool = nvimdiff
  tool = nvimdiff
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
